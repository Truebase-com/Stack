{
	"compilerOptions": {
		"outFile": "./build/encoder.js",
		"composite": true,
		"module": "system",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": false,
		"incremental": true,
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		],
		"watch": true
	},
	"include": [
		"./source/**/*.ts"
	],
	"exclude": [
		"**/build/**/*.ts",
		"**/bundle/**/*.ts",
		"**/make.ts"
	],
	"references": [
		{ "path": "../Truth" },
		{ "path": "../Backer/Encoder" }
	]
}
