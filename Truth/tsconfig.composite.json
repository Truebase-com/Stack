{
	"compilerOptions": {
		"composite": true,
		"module": "system",
		"target": "esnext",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": false,
		"incremental": true,
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		],
		"outFile": "./build/truth.js"
	},
	"exclude": [
		"**/build/**/*.ts",
		"**/bundle/**/*.ts",
		"**/make.ts"
	]
}
